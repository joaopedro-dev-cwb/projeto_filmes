<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Base path para projeto_filmes
    RewriteBase /projeto_filmes/public/
    
    # Permite acesso a arquivos estáticos
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ [NC]
    
    # Redireciona para index.php
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
</IfModule>

# Configurações de cache (opcional)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
</IfModule>

# Segurança básica
Options -Indexes
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

